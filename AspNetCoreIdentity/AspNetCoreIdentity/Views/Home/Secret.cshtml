@using AspNetCoreIdentity.Extensions
@{
    ViewData["Title"] = "Segredo";
}
<h1>@ViewData["Title"]</h1>

<p>Segredo</p>

@{
    if (this.IfClaim("Produtos", "Adicionar1"))
    {
        <p>Permissao de Adicionar sem permisao</p>
    }
}

@{
    if (this.IfClaim("Produtos", "Adicionar"))
    {
        <p>Permissao de Adicionar sem permisao</p>
    }
}
<div>
    @Html.ActionLink("Secret não mostrar", "Secret").IfClaimShow(Context, "Produtos", "Adicionars")
    @Html.ActionLink("Secret", "Secret").IfClaimShow(Context, "Produtos", "Adicionar")
</div>
<br />
<div>
    <a href="#" class="btn badge-danger @Html.Raw(this.IfClaimShow("Produtos", "Adicionarxx"))">Excluir</a>
    <a href="#" class="btn badge-primary @Html.Raw(this.IfClaimShow("Produtos", "Adicionar"))">Adicionar</a>
</div>
